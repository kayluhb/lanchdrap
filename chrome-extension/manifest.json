{
  "manifest_version": 3,
  "name": "LanchDrap Rating System",
  "version": "1.0.0",
  "description": "Rate your lunch drop orders and view rating history",
  "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
  "host_permissions": ["https://lunchdrop.com/*", "https://*.lunchdrop.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LanchDrap Ratings"
  },
  "content_scripts": [
    {
      "matches": ["https://lunchdrop.com/*", "https://*.lunchdrop.com/*"],
      "js": ["utils/userId.js", "utils/apiClient.js", "config.js", "content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "content-styles.css", "utils/*", "config.js"],
      "matches": ["https://*.lunchdrop.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
