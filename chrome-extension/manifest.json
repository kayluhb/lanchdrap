{
  "manifest_version": 3,
  "name": "LanchDrap",
  "version": "1.0.0",
  "description": "Rate your lunch drop orders and view rating history",
  "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
  "host_permissions": ["https://lunchdrop.com/*", "https://*.lunchdrop.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LanchDrap Ratings"
  },
  "content_scripts": [
    {
      "matches": ["https://lunchdrop.com/*", "https://*.lunchdrop.com/*"],
      "js": [
        "core/user-id.js",
        "core/api-client.js",
        "config/config.js",
        "core/models.js",
        "core/dom-utils.js",
        "utils/date-formatter.js",
        "utils/rating-utils.js",
        "utils/color-utils.js",
        "core/url-parser.js",
        "core/data-transformer.js",
        "core/data-layer.js",
        "features/stats/edit-dialog.js",
        "features/keys/key-manager.js",
        "features/stats/restaurant-scraper.js",
        "features/stats/stats-display.js",
        "features/rating/rating-widget.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "styles/content-styles.css", "core/*", "features/*", "config/*"],
      "matches": ["https://*.lunchdrop.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
