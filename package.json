{
  "name": "lanchdrap",
  "version": "1.0.0",
  "description": "LunchDrop Rating System - Chrome Extension + Cloudflare Worker",
  "private": true,
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67",
  "scripts": {
    "prepare": "husky",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "lint:fix:unsafe": "biome lint --write --unsafe .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "check:fix:unsafe": "biome check --write --unsafe .",
    "dev": "pnpm --filter cloudflare-worker dev",
    "deploy": "pnpm --filter cloudflare-worker deploy",
    "deploy:staging": "pnpm --filter cloudflare-worker deploy:staging",
    "deploy:prod": "pnpm --filter cloudflare-worker deploy:prod"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md,html}": [
      "biome format --write",
      "biome lint --write"
    ]
  },
  "keywords": [
    "chrome-extension",
    "cloudflare-worker",
    "lunchdrop",
    "ratings",
    "biome",
    "husky"
  ],
  "author": "Your Name",
  "license": "MIT"
}
